function form_offene_stellen_entity_insert(Drupal\Core\Entity\EntityInterface $entity) {
  if ($entity->getEntityTypeId() == 'node' && $entity->bundle() == 'offene_stellen') {
    // Here you modify only your day content type
          $node_storage = \Drupal::entityManager()->getStorage('node');
          // Loading the node initiativen.
          $node = $node_storage->load($entity->id());
          // Get node title
          //$title_initiative = $node->get('title')->value;
          // Get user
          $user = \Drupal::currentUser();
          $id=$user->id();
          $user = \Drupal\user\Entity\User::load($id);
          $node->field_initiative->entity =  $user->field_meine_in->entity;
          $node->save();
